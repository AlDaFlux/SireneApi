
<table id="Bibliotheque_ancreai" class="table table-striped table-bordered table-triable_desc" cellspacing="0" width="100%">
        <thead>
	        <tr>
	            <th>Date</th>
 
	            <th>Titre</th>
                    {% if not par_source %}
                        <th>Source</th>
                    {% endif %}
                    
                    {% if app.user.isGestionnaire %}
                        <th>Publics</th>
                        
                    {% set RefPublics =  app.user.getGestionnaireReferentielsPublic %}
                    {% endif %}

                    
                    {# <th>Nb Crit√®res</th> #}
                    
	            <th class='screen_only'></th>
	        </tr>
        </thead>

        <tbody>
        	{% for bibliotheque in ancreai_bibliotheques %}
				<tr>
		            <td>{{ bibliotheque.datePublication|hiddenDate("m-Y") | raw }} </td>
{#		            <td>{{ bibliotheque.dateCreate |hiddenDate("d-m-Y") | raw }} </td> #}



		            <td> <a   href="{{ path('pericles3_bibliotheque_ancreai_show', {'id':bibliotheque.id}) }}">{{ bibliotheque}}</a></td>
                            {% if not par_source %}
                                <td>{{ bibliotheque.TypeSource}}</td>
                            {% endif %}

                            {% if app.user.isGestionnaire %}
                            <td>
                                {% for refePublic in bibliotheque.referentielPublics  %}
                                    	
                                    {% if refePublic in RefPublics %}
                                        - <a   href="{{ path('pericles3_bibliotheque_ancreai_public', {'id':refePublic.id}) }}">{{ refePublic}}</a>  
                                    {% endif %}
                                   
                                {% endfor %}
                            </td>
                            {% endif %}
                        
                            
                            
                         {#
                    {% if  bibliotheque.typeSource == 'RBPP' %}
                        {% if bibliotheque.NbCriteres  > 0 %}
                            <td class='success'>{{bibliotheque.NbCriteres   }}</td>
                        {% else %}
                            <td class='warning'>{{bibliotheque.NbCriteres   }}</td>
                        {% endif %}
                    {% else %}
                        <td>
                        </td>
                    {% endif %}
                    #}
                    
                            
		            <td  class='screen_only'>
                                <a target='blank' href='{{bibliotheque.href}}'><i class='glyphicon glyphicon-globe'></i></a>
                                
                                <a   href="{{ path('pericles3_bibliotheque_ancreai_show', {'id':bibliotheque.id}) }}">
                                    <i class='glyphicon glyphicon-eye-open'></i>
                                </a>
		            </td>
	       		</tr>
			{% endfor %}
        </tbody>
</table>
         
        