                <li role="separator" class="divider"></li>
                    {% for source in BibliothequeAncreaiTypeSources %}
                        <li><a href="{{ path('pericles3_bibliotheque_ancreai_source', {'id': source.id}) }}"><i class='glyphicon glyphicon-book'></i>{{source}}</a></li>
                    {% endfor %}
                
            {% if is_granted('ROLE_GESTIONNAIRE') %}
                <li role="separator" class="divider"></li>
