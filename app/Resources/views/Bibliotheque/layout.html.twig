        {% if  is_granted('ROLE_GESTIONNAIRE') %}
                    <ul class="nav navbar-nav">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                 <i class='glyphicon glyphicon-queen'></i> Bibliothèques  établissement<span class="caret"></span></a>
                <ul class="dropdown-menu">
                        <li><a href="{{ path('pericles3_bibliotheque_etablissement') }}"><i class='glyphicon glyphicon-th-list'></i>Tous</a></li>
                            <li role="separator" class="divider"></li>

                      {% for etablissement in app.user.etablissements %}
                      <li>
                          <a href="{{ path('pericles3_bibliotheque_etablissement_id', {'id': etablissement.id}) }}"><i class='glyphicon glyphicon-queen'></i> 
                              
                              {% if etablissement.NbBibliotheques > 0 %} 
                                        <span class="label label-primary">  {{etablissement.NbBibliotheques }} </span> 
                              {% else  %} 
                                        <span class="label label-default">  {{etablissement.NbBibliotheques }} </span> 
                              {% endif  %} 
                              
                              {{etablissement}}</a>
                            
                      </li>
                      {% endfor %}
                </ul>
              </li>
              </ul>
            {% else %} 
                    <ul class="nav navbar-nav">
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
