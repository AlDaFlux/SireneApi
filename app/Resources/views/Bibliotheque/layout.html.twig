                 {% for domaine in domaines %}
                    <li><a href="{{ path('pericles3_bibliotheque_preuves_domaine', {'id': domaine.id}) }}"><i class='glyphicon glyphicon-book'></i> - {{domaine}}</li>
                {% endfor %}
           {% endif %}            
                <li role="separator" class="divider"></li>
                 <li><a href="{{ path('pericles3_bibliotheque_preuves_source', {'type_preuve': "pdv"}) }}"><i class='glyphicon glyphicon-th-list'></i>Point de vue de l'usager</a></li>                 
          </ul>
        </li>
        
      
        
        
        </ul>
          
          
          
           
      <ul class="nav navbar-nav navbar-right">
        {% if  not is_granted('ROLE_GESTIONNAIRE') %}
