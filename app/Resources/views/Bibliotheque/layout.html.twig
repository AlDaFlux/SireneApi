                {% if  etablissement is defined %}
                    <li><a href="{{ path('pericles3_bibliotheque_preuves_biblio_etab', {"id":etablissement.id}) }}"><i class='glyphicon glyphicon-th-list'></i>Migrer les preuves vers la bibliotheque +</a></li>
               {% endif %}            
            {% endif %}
            
            
                <li role="separator" class="divider"></li>
                

                {% if  is_granted('ROLE_GESTIONNAIRE') %}
                      {% for etablissement in app.user.etablissements %}
                          <li><a href="{{ path('pericles3_bibliotheque_preuves_etablissement', {'id': etablissement.id}) }}"><i class='glyphicon glyphicon-queen'></i> 
                                {% if etablissement.NbPreuves > 0 %} 
                                        <span class="label label-primary">  {{etablissement.NbPreuves }} </span> 
                              {% else  %} 
                                        <span class="label label-default">  {{etablissement.NbPreuves}} </span> 
                              {% endif  %} 
                              

                              {{etablissement}}</a></li>
                      {% endfor %}
                {% endif %}
