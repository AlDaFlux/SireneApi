                      <ul class="dropdown-menu">
                        <li><a href="{{ path('pericles3_bibliotheque_etablissement') }}"><i class='glyphicon glyphicon-th-list'></i>Liste</a></li>
                            <li role="separator" class="divider"></li>
                              {% if is_granted('ROLE_RW_BIBLIO') %}
                              
                                    <li><a href="{{ path('pericles3_bibliotheque_create', {'type': "lien"}) }}"><i class='glyphicon glyphicon-plus'></i> Lien </a></li>
                                    <li><a href="{{ path('pericles3_bibliotheque_create', {'type': "fichier"}) }}"><i class='glyphicon glyphicon-plus'></i> Fichier </a></li>
                                    <li><a href="{{ path('pericles3_bibliotheque_create', {'type': "texte"}) }}"><i class='glyphicon glyphicon-plus'></i> Texte </a></li>
