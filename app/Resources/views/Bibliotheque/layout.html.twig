        {% if gestionnaire  is defined %}
            <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <i class='glyphicon glyphicon-king'></i>  Gestionnaire<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="{{ path('pericles3_bibliotheque_gestionnaire') }}"><i class='glyphicon glyphicon-th-list'></i>Liste</a></li>
              </ul>
            </li>
            </ul> 
