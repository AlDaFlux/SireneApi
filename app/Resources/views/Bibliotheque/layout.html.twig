            <li><a href="{{ path('pericles3_bibliotheque_preuves_source', {'type_preuve': "objectif_operationnel"}) }}"><i class='glyphicon glyphicon-th-list'></i>PAQ</a></li>
                <li role="separator" class="divider"></li>
                
            <li><a href="{{ path('pericles3_bibliotheque_preuves_source', {'type_preuve': "critere"}) }}"><i class='glyphicon glyphicon-th-list'></i>Evaluation</a></li>

