{% if is_critere is not defined %}
    {% set is_critere = false %}
{% endif %}
{% if is_pdv   is not defined %}
    {% set is_pdv = false %}
{% endif %}

{% if is_objectif_operationnel   is not defined %}
    {% set is_objectif_operationnel = false %}
{% endif %}

{% if par_type_preuve   is not defined %}
    {% set par_type_preuve = false %}
{% endif %}

{% if access   is not defined %}
    {% set access = true %}
{% endif %}
 
{% if access   is not defined %}
    {% set lien = true %}
{% endif %}
 

<div class="table-responsive">
<table class="table table-striped table-bordered table-triable">
        <thead>
	        <tr>
                    {% if etablissement is not defined %}
        	            <th> Etablissement</th>
                    {% endif %}
	            <th>Bibliothèque</th>
	            <th>Lien</th>
	            <th>Fichier</th>
	            <th>Commentaire</th>

                    {% if not par_type_preuve %}
                        <th>Origine</th>
                    {% endif %}

                    {% if is_critere %}
                        <th>Critère</th>
                    {% endif %}
                    {% if is_pdv %}
                        <th>Domaine</th>
                    {% endif %}
                    {% if is_objectif_operationnel %}
                        <th>Objectif</th>
                    {% endif %}
                    {% if access %}
                        <th class='screen_only'>Accès </th>
                    {% endif %}
                        
	            <th>Date</th>
	        </tr>
        </thead>

        <tbody>
        	{% for preuve in preuves %}
                        <tr>
                            {% if etablissement is not defined %}
                                <th> <a href='{{ path('pericles3_bibliotheque_preuves_etablissement', {'id': preuve.etablissement.id}) }}'>{{preuve.etablissement}}</a></th>
                            {% endif %}
                            
                            <td>
                            {% if preuve.bibliotheque is not empty  %}
                                 <a href="{{ path('pericles3_bibliotheque_show', {'id': preuve.bibliotheque.id}) }}"> 
                                    {{'biblio' | get_icon | raw }} {{preuve.bibliotheque.TypeMessage | iconeBibliotheque() | raw  }}  {{preuve.bibliotheque}} 
                                
                            {% else %}
                               
                            {% endif %}
                            </td>
                            
                            
                            <td> 
                                 {% if preuve.fichier is not empty  %}
                                    <a title="{{preuve.fichier}}" href="{{ asset('upload') }}/{{ preuve.getRelativPath }}" target="_blank">{{ preuve.fichier | GetIconFile(true) | raw }}</a>
                                {% elseif preuve.Href is not empty  %}
                                    <a title="{{preuve.Href}}"  href="{{preuve.Href}}" target="_blank"><i class='glyphicon glyphicon-globe'></i></a>
                                {% endif %}
                            </td>

                            
                            <td>{% if preuve.fichier is not empty  %} {{preuve.fichier}} {% endif %} </td>
                            <td>{{ preuve.commentaire | limitChar(55) }}</a></td>
                            
                                
                            {% if not par_type_preuve %}
                                <td>
                                <a href="{{ path('pericles3_bibliotheque_preuves_source', {'type_preuve': preuve.typePreuve}) }}">
                                    {{ preuve.typePreuve | typePreuveLib}}</a></td>
                                
                            {% endif %}
                             
                            
                            {% if is_critere %}
                                <td class='small'>{{preuve.critere}}</td>
                            {% endif %} 
                            {% if is_pdv  %}
                                <td class='small'>{{preuve.domaine}}</td>
                            {% endif %} 
                            {% if is_objectif_operationnel  %}
                                <td class='small'>{{preuve.ObjectifOperationnel}}</td>
                            {% endif %} 
                            
                            {% if access %}
                            <td class='screen_only center'>
                                {% if preuve.typePreuve =='pdv' %}
                                    <a title="Accèdez à l'évaluation du domaine {{preuve.domaine}} " href="{{ path('pericles3_domaine', {'id': preuve.domaine.id}) }}"><i class='glyphicon glyphicon-thumbs-up'></i>Dom. {{preuve.domaine.numero}}</a>
                                {% elseif preuve.typePreuve =='objectif_operationnel'  %} 
                                           <a  title="Accèdez à l'objectif opérationnel {{preuve.ObjectifOperationnel}}" href="{{ path('paq_ooa_show', {'id': preuve.ObjectifOperationnel.id}) }}"><i class='glyphicon glyphicon-export'></i></a>
                                {% elseif preuve.typePreuve =='critere'  %} 
                                    <a title="Accèdez à l'évaluation du critère {{preuve.critere}} " href="{{ path('pericles3_critere', {'id': preuve.critere.id}) }}"><i class='glyphicon glyphicon-thumbs-up'>{{preuve.critere.numero}}</i></a>
                                {% endif %} 
                            </td>
                            {% endif %} 

                            <td>{{ preuve.dateCreate|hiddenDate("d-m-Y") | raw }}</td>
                                
                            {#
		            <td>{{ bibliotheque}}</td>

                            {% if not par_source %}
                                <td>{{ bibliotheque.TypeSource}}</td>
                            {% endif %}

		            <td>
                                <a target="_blank" href="{{ bibliotheque.href }}">
                                    <i class='glyphicon glyphicon-eye-open'></i>
                                </a>
		            </td>
                            #}
	       		</tr>
                        
			{% endfor %}
        </tbody>
</table>
</div>
        