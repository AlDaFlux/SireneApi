{% extends "::layout.html.twig" %}

{% block title %}{{ parent() }} - Login{% endblock %}
{% block legend %}
{% endblock %}

{% block body %}
	<div class="well">
		
		{% if error is not null %}
			<div class="alert alert-danger">
				Nom d'utilisateur ou mot de passe incorrect
 			</div>
		{% endif %}
	
		<form action="{{ path("login_check", {}) }}" method="POST" >
		    <div class="form-group">
		        <label for="inputUsernameEmail">Nom d'utilisateur :</label>
		        <input type="text" required="required" class="form-control" value="{{ last_username }}" name="_username" id="username">
		    </div>
		
		    <div class="form-group">
		        <label for="inputPassword">Mot de passe :</label>
		        <input type="password" class="form-control" name="_password" required="required" id="password">
		    </div>
		
		    <div class="checkbox pull-left">
		        <label>
		        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
		        <label for="remember_me">Se souvenir de moi</label>
		        </label>
		    </div>
		
		    <button type="submit" class="pull-right btn btn btn-primary">
		        Se connecter
		    </button>
		</form>
		<div class="motdepasseoublie">
			<a href="{{ path("login_motdepasseoublie", {}) }}">Mot de passe oubli√©</a>
		</div>
	</div>
{% endblock %}