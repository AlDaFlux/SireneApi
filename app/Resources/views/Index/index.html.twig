                    <p><span class="gras">Code postal : </span>{{ etablissement.codePostal }}</p>
                    <p><span class="gras">Ville : </span>{{ etablissement.ville }}</p>
                    <a href="{{link}}"  class = "btn btn-link  full-width">Accédez à la fiche complète</a>
               </div> 
        </div>
    </div>
                 
    <div class="col-sm-4">
        <div class="panel panel-primary">
            <div class="panel-heading"><h3 class="panel-title">  
                    <a href="{{ path('watchdd_index_etablissement', {'id': etablissement.id}) }}">Espace disque</a></h3>
            </div>
             <div class="panel-body">  
                    
                    {% include "Index/inc_watchdd_global.html.twig" %}
               </div> 
        </div>

                    
    </div> 
</div> 
             
             
       
            
             
