             ->  <a title='Etablissement'  href="{{ path('pericles3_synthese_etablissement', {'id': etablissement.id}) }}"> <i class='glyphicon glyphicon-queen'></i> {{etablissement}}</a>
        {% endif %}
  
    </h1>

   
