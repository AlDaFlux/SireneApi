                          <ul class="dropdown-menu">
                              
                        <li><a href="{{ path('pericles3_sauvegardes') }}"><i class='glyphicon glyphicon-th-list'></i> Toutes</a></li>
                        <li role="separator" class="divider"></li>
                        
                   {% if etablissement is defined %}
                     {% if  etablissement.sauvegardes | length %}
                              

                        {% for Sauvegarde in etablissement.sauvegardes  %}
                                <li><a href="{{ path('pericles3_backup_synthese', {'id': Sauvegarde.id}) }}">
                                <span class="badge">{{Sauvegarde.note | formatNoteSimple }}</span>{{Sauvegarde}} </a></li>
                        {% endfor %}
                        <li role="separator" class="divider"></li>
                     {% endif %}
                {% endif %}  
                    
                    {% if is_granted('ROLE_GESTIONNAIRE')  %}  
                        {% for etablissement  in app.user.etablissements %}
                                <li><a href="{{ path('pericles3_sauvegardes_etablissement', {'id': etablissement.id}) }}">
                              {% if etablissement.NbSauvegardes > 0 %} 
                                        <span class="label label-primary">  {{etablissement.NbSauvegardes }} </span> 
                              {% else  %} 
                                        <span class="label label-default">  {{etablissement.NbSauvegardes }} </span> 
