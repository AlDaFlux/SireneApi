                                   {% endfor %}
                             </ul>
                           </li>
                    {% endif %}     
                                
                                
                    <li class="dropdown">
                     <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                         <i class='glyphicon glyphicon-queen'></i> Etablissements<span class="caret"></span></a>

                       <ul class="dropdown-menu">

                           {% for etablissement in app.user.etablissements %}
                               <li><a href="{{ path("pericles3_synthese_etablissement",{'id' : etablissement.id}) }}">
                                         <i class='glyphicon glyphicon-queen'></i>    {{etablissement}} </a></li>
                           {% endfor %}
                     </ul>
                   </li>
                    
    
                {% endif %}    
                
                
                   {% if etablissement is defined %}
