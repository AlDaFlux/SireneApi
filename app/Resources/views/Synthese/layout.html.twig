                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                          Externes<span class="caret"></span></a>
                          
                                                <ul class="dropdown-menu">
                         <li><a href="{{ path('syntheses_alternative_gestionnaire') }}"><i class='glyphicon glyphicon-th-list'></i> Tout  </a></li>
                        <li role="separator" class="divider"></li>
                        {% for etablissement in app.user.etablissements %}
                            <li><a href="{{ path('pericles3_synthese_alternatif_etablissement', {'id': etablissement.id})}}"><i class='glyphicon glyphicon-queen'></i>{{etablissement}} ({{etablissement.ReferentielExterne}}) </a></li>
                            {% endfor %}
                      </ul>
                     </li>
            {% else  %}
                    {% if etablissement.ReferentielExterne is not empty %}

                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                          {{etablissement.ReferentielExterne}} <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                         <li><a href="{{ path('pericles3_synthese_alternatif') }}"><i class='glyphicon glyphicon-th-list'></i> Tout  </a></li>
                        <li role="separator" class="divider"></li>
                        
                        {% if app.user.etablissement is not empty %}
                            {% for domainesExterne in app.user.etablissement.domainesExterne %}
                            <li><a href="{{ path('pericles3_synthese_alternatif_niv1', {'id': domainesExterne.id})}}">
                                <span class="badge">{{domainesExterne.MoyenneNotes}}/10</span>{{domainesExterne}} </a></li>
