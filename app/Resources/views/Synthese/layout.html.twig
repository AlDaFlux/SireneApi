                          <ul class="dropdown-menu">
                                 {% if not is_granted('ROLE_GESTIONNAIRE')  %}  
                            <li><a href="{{ path('pericles3_synthese_pericles') }}"><i class='glyphicon glyphicon-th-list'></i> Tout </a></li>
                                 {% endif  %}  
                                 
                            <li role="separator" class="divider"></li>
                                {% for domaine in etablissement.domaines %}
                                    <li><a href="{{ path('pericles3_synthese_domaine', {'id': domaine.id})}}">
                                        <span class="badge">{{domaine.getMoyenneNotes}}/10</span>{{domaine}} </a></li>
