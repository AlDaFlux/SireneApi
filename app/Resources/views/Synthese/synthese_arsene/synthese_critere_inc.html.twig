
     
         
         
        <h2>Eléments d'appréciation</h2>
          {% if critere.NbQuestionsRepondues > 0 %}
                <ul>
                {% for question in critere.questions %}
                    {% if question.repondu %}
                    <li>{{question.reponse | reponseGlyphIcone | raw}} {{question.ReponseLib}} </li>
                    {% endif%}
                {% endfor %}
                </ul>
        {% else %}
            <div class="alert alert-warning">Vous n'avez pas renseignés les éléménts d'appréciation pour ce critère</div>
        {% endif %}
                   
        
   
        {% if critere.constats | length > 0 %}
        <h2>Constats et analyses</h2>
                <ul>
                   {% for constats in critere.constats %}
                        <li>{{ constats }}</li>
                {% endfor %}
                </ul>
        {% endif %}
   
        {% if critere.preuves | length > 0 %}
        <h2>Preuves</h2>
                <ul>
                   {% for preuve in critere.preuves %}
                        <li>{{ preuve }}</li>
                {% endfor %}
                </ul>
        {% endif %}
        
        
      {% if critere.objectifs | length > 0 %}
        <h2>Objectifs Opérationnels d'Amélioration</h2>
                <ul>
                   {% for objectif in critere.objectifs %}
                        <li>{{ objectif }}</li>
                {% endfor %}
                </ul>
        {% endif %}
                            
                            
