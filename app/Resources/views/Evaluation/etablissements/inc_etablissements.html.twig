            
      {% for etablissement in etablissements %}

          
        <div class="row">
             <div class="col-md-12 ">
                <div class="panel panel-primary">            
                    <div class="panel-heading"> <h3 class="panel-title">
                       <i class='glyphicon glyphicon-queen'></i>     <a  href="{{ path('pericles3_eval_etablissement', {'id': etablissement.id}) }}"> {{ etablissement}} ({{ etablissement.referentielPublic.public}})</a> </h3> </div>
                      <div class="panel-body"> 
                          
   
                        <div class='w_radar'>
                           <a  href="{{ path('pericles3_eval_etablissement', {'id': etablissement.id}) }}">   <canvas id="chartCanvas_{{etablissement.id}}" height="220" width="220"></canvas></a>
                         </div>                          
                
                    <ul class='list_w_radar  list_menu'>
                       {% for domaine in etablissement.domaines |order  %}
                           <li class="{{domaine.Status | critereStateCss }}">
                                    <a class="dimension_link" href="{{ path('pericles3_domaine', {'id': domaine.id}) }}">
                                               {{ domaine.numero }} - {{ domaine}}
                                           </a>    
                           </li>
                       {% endfor %}
                   </ul>



                   </div>
             </div>
            </div>
        </div>
 
{% endfor %}
 