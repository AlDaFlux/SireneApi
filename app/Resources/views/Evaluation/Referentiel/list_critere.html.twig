 
<div class="CritereListContainer screen_only">
    <div id="CritereTitle"><h2>CRITÈRES D'ÉVALUATION</h2></div>
    <ul>
        {% for critere in criteres %}
       
            {% if current_critere_ref_id is defined  %}
                {% if critere.id == current_critere_ref_id  %} 
                    {% set active_class=" actif " %}
                {% else %}
                    {% set active_class=" " %}
                {% endif %}
            {% else %}
                {% set active_class=" " %}
            {% endif %}
              <li>
                            <a class="critere_link {{active_class}}" href="{{ path('pericles3_critere_ref', {'id': critere.id}) }}">
                                   
                                </span>    > {{ critere.numero }} - {{ critere}}
                            </a>
            </li>
             
        {% endfor %}
    </ul>
</div>