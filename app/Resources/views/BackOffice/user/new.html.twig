{% extends "BackOffice/layout.html.twig" %}

{% block body %}
    
    
    <h1>{{titre}}</h1>
    <h2>{{'user' | get_icon | raw}} Nouvel utilisateur</h2>

    
    {% if profil is defined %}
        {% if profil is not null %}
            <div class='alert alert-info'>
                    <h3>  <i class='{{profil.Icon}}'></i> {{profil}}</h3>
                    {{profil.description}}
            </div>                
        {% endif %}
    {% endif %}
        
    {% include "MessageFlash/messageFlash.html.twig" %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ include("Nuts/cancelsave.html.twig") }}
    {{ form_end(form) }}

{% endblock %}
