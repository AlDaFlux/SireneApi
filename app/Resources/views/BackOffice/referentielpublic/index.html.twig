{% extends "BackOffice/layout.html.twig" %}

{% block body %}
    <h1>Referentiels (Public)</h1>
    
    
    {% if criteresAnnexeManquant | length > 0 %}
         <div class='alert alert-danger'>
            <h1 class='danger'>Critères non liés aux critères annexes !!! </h1>
            <table class='table table-bordered'>
            {% for criteresAnnexeManquant in criteresAnnexeManquant %}
                <tr>
                    <td title='{{criteresAnnexeManquant}}'><a class='btn btn-danger'  href='{{ path('referentielpublic_show_node', { 'id': criteresAnnexeManquant.referentielPublic.id,'id_node': criteresAnnexeManquant.id }) }}'>{{criteresAnnexeManquant.numero}}</td>
                    <td><a href='{{ path('referentielpublic_show', { 'id': criteresAnnexeManquant.referentielPublic.id }) }}'>{{criteresAnnexeManquant.referentielPublic}}</a></td>
                    <td>
                        <a href="{{ path('referentiel_externe_show', { 'id': criteresAnnexeManquant.referentielPublic.id ,'ref_externe': criteresAnnexeManquant.referentielPublic.referentielExterne.id }) }}">
                            {{criteresAnnexeManquant.referentielPublic.referentielExterne}}
                        </a></td>
                        
                    
                    
                </tr>
            {% endfor %}
            </table>
        </div>
    {% endif %}
         
    
    {% include "BackOffice/referentielpublic/list.html.twig" %}
           
    <div class='alert alert-warning'>
    <h1 class='danger'>Referentiels Désuets</h1>
    {% include "BackOffice/referentielpublic/list.html.twig" with {'referentielPublics' : referentielsDesuet }  %}
    </div>
        
        
        {% if app.user.getReferentielsPublicNonFini | length > 0  %}
         <div class='alert alert-danger'>
            <h1>En developpement</h1>
            {% include "BackOffice/referentielpublic/list_endev.html.twig" with {'referentielPublics' : app.user.getReferentielsPublicNonFini }  %}
        </div>
        {% endif %}

  
{% endblock %}
