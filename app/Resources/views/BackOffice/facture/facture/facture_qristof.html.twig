          <div class='adresse_cible'>
              {{facture.getConcerne}}
              <br>{{facture.AdresseLigne1}}
              <br>{{facture.AdresseLigne2}}
          </div>
  
  
</div>
  <hr class='separateur'>      
      {% set total = 0  %}
      
      
  <table class='tabfact'>
      <tr class='entente'><td  colspan='2'>PRESTATION</td></tr> 
      <tr class='entente'><td  colspan='2'>{{application_name}} <br>{{application_description}}</td></tr>

 
                    {% for presta  in facture.getFacturePrestas %}
                        {% if presta.gestionnaire %} 
                            <tr class='module_gestionnaire'> 
                                <td>{{presta}}
                                    <div class='info_complementaire_etab'>
                                        {{presta.RenouvellementLib}}
                                        {{presta.ValiditeDateLib}}
                                    </div>
                                </td>

                        {% elseif presta.etablissement %} 
                            <tr> 
                                <td>{{presta.etablissement}}
                                    <div class='info_complementaire_etab'>
                                        {{presta.etablissement.finess}}
                                       
                                        {{presta.RenouvellementLib}}
                                        {{presta.ValiditeDateLib}}
                                            
                                    </div>
                                    
                                </td>
                       
                        {% endif %} 
                            
                            
                            <td class='montant'>{{presta.MontantLib}}</td>
                            
                             
                            

                            
                        </tr>
                    {% set total = total  + presta.montant %}
                    {% endfor %}
                    
                     {% if facture.remise %}
                        {% set total = total  - facture.MontantRemise %}
                        <tr class='remise'> 
                            <td>Remise {{facture.remise }}
                                {% if facture.remiseLibelle %}
                                    ({{facture.remiseLibelle}})
                                {% endif %}
                            </td>
                            <td class='montant'>- {{facture.MontantRemise}}€</td>
                        </tr>
                    
                    {% endif %}
                        <tr class='total'> 
                            <td>Total : </td>
                            <td class='montant'>{{total}} €</td>
                         </tr>


  </table>      
 <hr class='separateur'>      
  

