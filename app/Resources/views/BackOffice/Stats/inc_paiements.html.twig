
 <table class='table table-bordered'>
     <thead>
         <th>Paiement</th>
         <th>Premier abonnement</th>
         <th>Renouvellement</th>
         <th>Total</th>
     </thead>
     <tbody>
         
         <tr>
             <th>Pay√©es</th>
             <td class='text-right'  style="color:#ffffff;background-color:#4c4ca6;">{{factureesPayees| currency | raw}}</td>
             <td class='text-right'  style="background-color:#ffae4c;">{{factureesRenPayees | currency | raw}}</td>
             <td class='text-right alert-success' >{{ (factureesPayees + factureesRenPayees) | currency | raw}}</td>
         </tr>
         <tr>
             <th>En attente de paiement</th>
             <td class='text-right'  style="background-color:#79e9de;">{{factureesNonPayees| currency | raw}}</td>
