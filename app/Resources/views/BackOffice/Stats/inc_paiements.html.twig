             <td class='text-right alert-danger' >{{ (factureesNonPayees + factureesRenNonPayees) | currency | raw}}</td>
         </tr>
         
         <tr>
             <th>Total </th>
             <td class='text-right'  style="background-color:#639BC2;">{{ (factureesPayees + factureesNonPayees) | currency | raw}}</td>
             <td class='text-right'  style="background-color:#FDAA74;">{{ (factureesRenPayees + factureesRenNonPayees) | currency | raw}}</td>
             <td class='text-right'  style="color:#ffffff;background-color:#007699;">{{ (factureesPayees + factureesNonPayees +  factureesRenPayees + factureesRenNonPayees) | currency | raw}}</td>
             
         </tr>
     </tbody>
 </table>
     