{% extends "BackOffice/layout.html.twig" %}

{% block body %}
    <h1> <a href="{{ path('backoffice_qualieval_index') }}"> Quali Eval</a> </h1>
    
    <a class='btn btn-primary' href="{{ path('backoffice_qualieval_arborescence') }}"> Arborescence </a> 
  
    <table class='table table-bordered table-triable'>
        <thead>
            <th>Num√©ro</th>
            <th>Nom</th>
            <th>Id</th>
            <th>Adulte</th>
