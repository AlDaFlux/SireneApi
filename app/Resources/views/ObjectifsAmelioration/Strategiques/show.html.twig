{% extends "ObjectifsAmelioration/Strategiques/layout.html.twig" %}

{% block title %}{{ parent() }} - {% endblock %}

{% block body %}
{{ parent() }}

   <div class="well">
       <h3 class='osa'>{{ ObjectifStrategique.commentaire }}</h3>
            {% include "MessageFlash/messageFlash.html.twig" %}

                
            <p><span class="gras">Statut : </span> <span class='{{ObjectifStrategique.CSSClasse}}'>{{ ObjectifStrategique.StatutLib }}</span></p>
            <p><span class="gras">Date d'échéance : </span>{{ ObjectifStrategique.dateEcheance is empty ? "" : ObjectifStrategique.dateEcheance|date("d-m-Y") }}</p>

       
                
            <div class="form-group">
                <label class="control-label" for="critere">Domaine :</label>  {{ObjectifStrategique.Domaine}} 
            </div>
        
                
    </div>

             
  
      <div class="row">
 
            {% if is_granted('ROLE_RW_PAQ') %}
                        <div class='col-md-4'>
                                        <a  class="btn btn-primary active oa full-width" href="{{ path('paq_osa_edit', {'id': ObjectifStrategique.id}) }}">
                                            <i alt='modifier' class='glyphicon glyphicon-pencil'></i>Modifier l'objectif 
                                        </a>
                        </div>

                        <div class='col-md-4'>
                            <a class="col-md-4 btn btn-primary active oa full-width" href="{{ path('paq_osa_list') }}"><i class='glyphicon glyphicon-th-list'></i>Retour a la liste </a>
                        </div>
                        <div class='col-md-4'>
                            <i data-invite="Voulez-vous supprimer définitivement l'Objectif Stratégique ?"
                                                data-url_delete="{{ path('paq_osa_delete_get', {'id': ObjectifStrategique.id}) }}" 
                                               class='DeleteBoxBefore glyphicon glyphicon-trash iconhead btn btn-danger active full-width'
                                               >Supprimer l'objectif</i> 
            {% else %}
                <div class='col-md-12'>                                               
                            <a class="btn btn-primary active oa full-width" href="{{ path('paq_osa_list') }}"><i class='glyphicon glyphicon-th-list'></i>Retour a la liste </a>
                </div>                                   
            {% endif %}                       
                           
        </div>
    </div>
                               
                               

                               
                
                
{% endblock %}
