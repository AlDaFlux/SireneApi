 <script type="text/javascript">
         
        $(function() {
             var description= [];

    {% for objectifOperationnel in objectifOperationnels %}
            	 
             description[{{objectifOperationnel.id}}]="{{objectifOperationnel.description|replace({"'": "’"})|replace({"\n": " - "})|replace({"\r": " - "})|replace({"\t": " - "})}}";
    {% endfor %}
    
            "use strict";

               var popoverContent="----";


            $(".gantt").gantt({
                source: [
                {% include "ObjectifsAmelioration/inc_gantt_oo.js.twig" %} 
                ],
                navigate: "scroll",
                scale: "weeks",
                maxScale: "months",
                minScale: "hours",
                itemsPerPage: 1000,
                useCookie: true,
                months:	["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Aout", "Septembre", "Octobre", "Novembre", "Decembre"],
