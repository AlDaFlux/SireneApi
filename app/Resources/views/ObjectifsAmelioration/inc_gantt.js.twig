                },
                    onRender: function() {
                    if (window.console && typeof console.log === "function") {
                        console.log("chart rendered");
                    }
                }
            });

            $(".gantt").popover({
                selector: ".bar",
                title: function () {
                    return $(this).text();
                   },
                content: function () {
                    return description[$(this).data("dataObj")];
                   },
                trigger: "hover",
                placement: "auto auto"
            });

        });
    </script>
